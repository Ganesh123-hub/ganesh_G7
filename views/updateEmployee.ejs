
<%- include('header') %>  

<div class="container">
      <div class="row">  
        
          <div id="" style="margin-top:50px" 
               class="mainbox col-md-7 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                   <div class="panel-heading">
                      <div class="panel-title"> 
                            <h4 class="text-center"><b>EDIT EMPLOYEE RECORDS</b></h4>
                      </div>
                   </div>
                   <div style="float: right;">      
                          <a href="/addEmployee/viewEmployee">
                            <b>View All Employees</b>
                          </a> 
                    </div> <br>
                     <div class="text-center"> 
                      <u><b>ID : <%= ID %></b></u>
                    </div>
                    <div class="panel-body">
                        
                      <form action="/addEmployee/viewEmployee/edit/"
                        class="form-horizontal" method="post">
                         <% if(db_msg != '') { %> 
                          <div id="signupalert"  class="alert alert-danger">
                             <p class="text-center" style="color: red">
                                 <strong> <%= db_msg %> </strong>
                             </p>
                          </div>
                               <% } %>   
                  <div class="col-lg-6 col-md-6 col-sm-12">                                
                                    
                                <div class="form-group">
                                   <label class="col-md-3 control-label">Name</label>
                                     <div class="col-md-9"> 
                                                 <% if(vData.Name){ %> 
                                       <input type="text" class="form-control" name="name" 
                                              value="<%= vData.Name %>" required>
                                                  <% } else { %> 
                                       <input type="text" class="form-control" name="name" 
                                              value="<%= get_employee.Name %>" required> 
                                                        <% } %>                                           
                  <% if(ad_msg.name) { %> <p style="color: red"><%= ad_msg.name.msg %></p> <% } %>   
                                     </div>
                                </div> 
                                <div class="form-group">
                                   <label class="col-md-3 control-label">Role</label>
                                     <div class="col-md-9">
                                       <select name="role"> 
                                        <% if(vData.Role){ %>
                                         <option selected hidden><%= vData.Role %></option>            
                                        <% } else { %>
                                          <option selected hidden><%= get_employee.Role %></option>
                                         <% } for(var i in get_role) {%>
                                         <option><%= get_role[i].Role  %></option>
                                        <% }  %>
                                       </select>  
                                     </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-md-3 control-label">Dept</label>
                                  <div class="col-md-9">
                                       <select name="dept">
                                       <% if(vData.Dept){ %>
                                         <option selected hidden><%= vData.Dept %></option> 
                                        <% } else { %>
                                         <option selected hidden><%= get_employee.Department %></option> 
                                        <% } for(var i in get_dept) {%> 
                                         <option><%= get_dept[i].Dept  %></option>
                                        <% } %>
                                       </select>
                                   </div>
                                </div>
                                <div class="form-group">
                                   <label class="col-md-3 control-label">Password</label>
                                     <div class="col-md-9">
                                        <% if(uiPass.Pass){ %>
                                         <input type="password" class="form-control" name="pass" 
                                            value="<%= uiPass.Pass %>" required>
                                        <% } else { %>
                                         <input type="password" class="form-control" name="pass" 
                                            value="<%= Pass %>" required>
                                        <% } %>
                <% if(ad_msg.pass) { %> <p style="color: red"><%= ad_msg.pass.msg %></p> <% } %>
                                     </div>
                                </div>
                  </div>        
                  <div class="col-lg-6 col-md-6 col-sm-12">
                                 <div class="form-group"> 
                                   <label class="col-md-3 control-label">Email</label>
                                     <div class="col-md-9"> 
                                      <% if(vData.Email){ %>
                                         <input type="email" class="form-control" name="email" 
                                            value="<%= vData.Email %>" required>
                                       <% } else { %> 
                                         <input type="email" class="form-control" name="email" 
                                            value="<%= get_employee.Email %>" required>
                                        <% } %>
                <% if(ad_msg.email) { %> <p style="color: red"><%= ad_msg.email.msg %></p> <% } %>  
                                     </div>
                                </div>
                                <div class="form-group">
                                   <label class="col-md-3 control-label">Mobile</label>
                                     <div class="col-md-9"> 
                                       <% if(vData.Phone){ %>
                                         <input type="text" class="form-control" name="mobile" 
                                            value="<%= vData.Phone %>" required>
                                       <% } else { %> 
                                          <input type="text" class="form-control" name="mobile" 
                                            value="<%= get_employee.Phone %>" required>
                                        <% } %>  
                <% if(ad_msg.mobile) { %> <p style="color: red"><%= ad_msg.mobile.msg %></p> <% } %>
                                     </div>
                                </div> 
                                
                                <div class="form-group">
                                   <label class="col-md-3 control-label">Status</label>
                                     <div class="col-md-9">
                                         <select name="status"> <% if(vData.Status){ %>
                                          <option hidden selected>
                                            <%= vData.Status %> <% } %>
                                          </option>
                                          <option>Inactive</option>
                                          <option>Active</option>
                                        </select>      
                                     </div>
                                </div>
                                 <div class="form-group">
                                   <label class="col-md-3 control-label">Re-Password</label>
                                     <div class="col-md-9"> 
                                      <% if(uiPass.cPass){ %>
                                         <input type="password" class="form-control" name="cpass" 
                                            value="<%= uiPass.cPass %>" required>
                                      <% } else { %>
                                         <input type="password" class="form-control" name="cpass" 
                                            value="<%= Pass %>" required>
                                      <% } %>
                <% if(ad_msg.cpass) { %> <p style="color: red"><%= ad_msg.cpass.msg %></p> <% } %>
                                     </div>
                                </div>
                              </div> 
                  </div>     
                              
                              <div class="form-group">                                       
                                  <input type="submit" value="Updated" 
                                        class="btn btn-primary" style="margin-left: 42%;">       
                              </div>
                       </form>
                    </div> 
              </div>
          </div>

      </div>  
</div>             

