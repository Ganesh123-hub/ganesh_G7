
	 <%- include('employeeDashboard') %>
   
   <style type="text/css">
     #lst { padding-left: 5% }
     #rlst { padding-left: 7% }
   </style>
	 <div id="" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                   <div class="panel-heading">
                      <div class="panel-title"> 
                            <h4 class="text-center"><b>View Leaves</b></h4>
                      </div>
                    </div> 
                       <% if(msg !=''){ %>
                     <div id="signupalert"  class="alert alert-danger">
                        <p class="text-center"><strong><%= msg %></strong></p>
                     </div>
                         <% } %>
         <table class="table table-striped table-primary">
          <thead>
               
            <tr>
              <th id="lst">Leave_Id</th>
              <th>Created_Date </th>
              <th>Response</th>
            </tr>
          </thead> 
          <tbody> 
            <% for(var i in Leaves){ %> 
            <tr>
              <td id="rlst"><%= Leaves[i].Id %></td>
               <td><%= Leaves[i].FormDate.toDateString() %></td>   <!--  -->
              <td><%= Leaves[i].Response %></td>
              <td style="padding-left: 5%">
                        <button type="button" class="btn btn-info btn-xs" data-toggle="modal" 
                          data-target="#empLeave<%= Leaves[i]._id %>">
                          <i class="fa fa-eye"></i>
                        </button>
                        <% if(Leaves[i].Response=="Applied"){ %>
                     <a class="btn btn-primary btn-xs" 
                        href="/employeeDashboard/view/edit/<%= Leaves[i]._id %>">
                         <i class="fa fa-edit"></i> 
                     </a> 
                     <a class="btn btn-danger btn-xs" 
                        href="/employeeDashboard/view/delete/<%= Leaves[i]._id %>" 
                         onclick="return confirm('Are you sure?')">
                        <i class="fa fa-trash"></i>
                    </a> <% } %>
              </td>
            </tr>

                    <div class="modal fade" id="empLeave<%= Leaves[i]._id %>" role="dialog">
                           <div class="modal-dialog">
                             <!-- Modal content-->
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                                  <h4 class="modal-title"><%=  %></h4>
                                </div> 
                                <div class="modal-body">  
                                   <b>Emp_Id :</b> <%- Leaves[i].eId %><br>
                                     <%- Leaves[i].Name  %><br>
                                     <%- Leaves[i].Email  %><br>
                                   <b>Reason:</b>  <%- Leaves[i].Reason  %><br>
                                   <b>From :</b> <%- Leaves[i].Edate.toDateString()  %><br>
                                   <b>To:</b>  <%- Leaves[i].Sdate.toDateString()  %><br>
                                   <b>Response:</b>  <%- Leaves[i].Response %>
                                </div>
                              </div>
                            </div>
                    </div>

            <% } %> 
          </tbody>   <!-- <%= totalPages %> -->
         </table>
              </div>
                    
                    <!-- 


                      -->